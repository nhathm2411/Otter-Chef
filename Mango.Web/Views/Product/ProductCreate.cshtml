@model ProductDto

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<form asp-action="ProductCreate" enctype="multipart/form-data">
    <br />
    <div class="container border p-4" style="background-color: #f5f5f5; border-radius: 8px;">
        <h1 class="text-center" style="color: #a3745e;">Create Product</h1>
        <hr class="mb-4" style="border-top: 3px solid #a3745e;" />

        <div class="row">
            <!-- Product Name -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px; color: #a3745e;">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" style="border-color: #cfa671;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Category Selection -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px; color: #a3745e;">Category Name</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList" style="border-color: #cfa671;">
                    <option disabled selected>-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Product Description -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px; color: #a3745e;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" rows="5" style="border-color: #cfa671;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Price Field -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px; color: #a3745e;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" style="border-color: #cfa671;" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Image Upload Field -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px; color: #a3745e;">Image</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Image" type="file" class="form-control" style="border-color: #cfa671;" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- Navigation Buttons -->
            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn form-control" style="background-color: #cfa671; color: white;">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn form-control" style="background-color: #a3745e; color: white;" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
