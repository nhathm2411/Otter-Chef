@model CouponDto

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<form asp-action="CouponCreate" enctype="multipart/form-data">
    <br />
    <div class="container border p-4 shadow-sm" style="background-color: #f8f5f2;">
        <h1 class="text-center" style="color: #a3745e;">Create Coupon</h1>
        <hr class="mb-4" style="border-top: 3px solid #a3745e;" />

        <div class="row">
            <!-- Coupon Code Field -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px; color: #a3745e;">Coupon Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponCode" class="form-control" style="border-color: #cfa671;" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>

            <!-- Discount Amount Field -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px; color: #a3745e;">Discount Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" class="form-control" style="border-color: #cfa671;" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>

            <!-- Minimum Amount Field -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px; color: #a3745e;">Minimum Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinAmount" class="form-control" style="border-color: #cfa671;" />
                <span asp-validation-for="MinAmount" class="text-danger"></span>
            </div>

            <!-- Quantity Field -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px; color: #a3745e;">Quantity</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Quantity" class="form-control" style="border-color: #cfa671;" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- Image URL Field -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px; color: #a3745e;">Image</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Image" type="file" class="form-control" style="border-color: #cfa671;" />
                <input asp-for="ImageUrl" hidden />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="col-5 offset-2">
                <a asp-action="CouponIndex" class="btn form-control" style="background-color:#cfa671; color: white;">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn form-control" style="background-color: #a3745e; color: white;" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
